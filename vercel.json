{
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.7.4"
        }
    },
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/api/assets/$1"
        },
        {
            "src": "/",
            "dest": "/api/index.php"
        },
        {
            "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|zip|pdf|webp))",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*\\.php)",
            "dest": "/api/$1"
        },
        {
            "src": "/([^/\\.]+)",
            "dest": "/api/$1.php"
        }
    ]
}